{
    "name": "TheGames",
    "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:1-22",
    "forwardPorts": [5173],
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "postCreateCommand": "npm --prefix TheGames install"
    ,
    "postAttachCommand": "printf \"To run the project:\\n  npm run dev (from workspace root)\\nOr: npm --prefix TheGames run dev -- --host\\n\""
}